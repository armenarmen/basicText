<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      <% if logged_in? %>
        <%= link_to "Log out", logout_path, class: 'navbar-brand', method: "delete" %>
        <%= link_to "Profile", user_path(current_user.id), class: 'navbar-brand' %>
      <% else %>
        <%= link_to 'Login', login_path, class: 'navbar-brand' %>
        <%= link_to 'Sign Up', signup_path, class: 'navbar-brand' %>

      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
